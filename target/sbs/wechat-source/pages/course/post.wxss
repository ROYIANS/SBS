/**index.wxss**/
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
.page {
    display: block;
    min-height: 100vh;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
    background-color: #F5F5F5;
}

textarea {
    height: 40vh!important;
}

.button {
    width:90%;
    background-color: #212121;
    border: solid 4rpx #212121;
    color: #ffffff;
    margin: 25rpx 5%;
    border-radius: 0;
    height: 75rpx;
    font-size: 30rpx;
}

.button-hover {
    background-color: rgba(33,33,33,0.8) !important;
}
