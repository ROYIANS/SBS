@import "/theme.wxss";
@import "/colorui/icon.wxss";


.tab-bar {
    width: 750rpx;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    margin-top: 12.5rpx;
}

.tab-bar .bar {
    background-color: #fff;
    z-index: 2;
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    display: inline-block;
    box-shadow: 0 -5rpx 12.5rpx rgba(0, 0, 0, 0.16);
    margin-top: 12.5rpx;
}

.tab-bar .bar .menu {
    width: 20%;
    height: 100%;
    text-align: center;
    float: left;
}

.circle {
    width: 125rpx;
    height: 125rpx;
    border-radius: 100%;
    background-color: #fff;
    position: absolute;
    bottom: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(40%);
}

.circle-back {
    z-index: 1;
    box-shadow: 0 -5rpx 12.5rpx rgba(0, 0, 0, 0.16);
}

.circle-front {
    z-index: 3;
}

