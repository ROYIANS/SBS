.plus-button {
    z-index: 4;
    width: 100rpx;
    height: 80rpx;
    margin-top: 10rpx;
    border-radius: 30rpx;
    text-align: center;
    background-color: #333;
    font-size: 50rpx;
    box-shadow: 0 6.25rpx 12.5rpx rgba(0, 0, 0, 0.58);
}

.plus-button .span {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 50rpx;
    color: #fff;
}

.menu {
    opacity: 0.5;
    color: #212121;
    filter: grayscale(100%);
}

.menu-item {
    width: 50rpx;
    display: grid;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
}

.menu-item .span {
    font-size: 45rpx;
}

.menu-item .text {
    font-size: 21rpx;
}

.bar .active {
    opacity: 1;
    filter: grayscale(0%);
}

.PBHover {
    transform: translateY(5%);
    box-shadow: none;
    background-color: rgba(51, 51, 51, 0.753);
}

