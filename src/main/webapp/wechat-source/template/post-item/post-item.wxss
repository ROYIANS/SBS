/* pages/common/thread-item/card.wxss */
@import "/theme.wxss";
@import "/colorui/icon.wxss";

.card-out {
    margin-top: 17rpx;
    display: flex;
    justify-content: center;
    -webkit-box-shadow: 0 6.25rpx 12.5rpx rgba(0, 0, 0, 0.58);
    -moz-box-shadow: 0 6.25rpx 12.5rpx rgba(0, 0, 0, 0.58);
    box-shadow: 0 6.25rpx 12.5rpx rgba(0, 0, 0, 0.03);
}

.container {
    width: 684rpx;
}


.card-item-hover {
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    background-color: #fff !important;
}


.loading-text {
    height: 100vh;
}

.loading {
    height: 100rpx;
}


.card {
    width: 95%;
    background-color: #ffffff;
    border: solid 3px #212121;
    margin: 7% 2.5%;
    padding-bottom: 5%;
}

.title-bar {
    display: inline-block !important;
    vertical-align: middle !important;
    padding: 10rpx 25rpx;
    background-color: #fff;
    position: relative;
    font-size: 25rpx;
    left: 25rpx;
    top: -32rpx;
}

.title-bar image {
    display: inline-block !important;
    vertical-align: middle !important;
    width: 66rpx;
    height: 66rpx;
    border-radius: 100%;
    border: solid 5rpx #212121;
    float: left;
}

.info {
    vertical-align: middle !important;
    height: 66rpx;
    float: left;
    margin-left: 25rpx;
    max-width: 150rpx;
}

.left-top {
    font-size: 25rpx;
    font-weight: bold;
    width: 100%;
}

.left-bottom {
    font-size: 20rpx;
    color: grey;
    width: 100%;
}

.content {
    width: 90%;
    margin: 0 5%;
}

.content text {
    font-size: 30rpx;
    margin-bottom: 25rpx;
    word-break: break-all;
}

.text-control {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}

.content video {
    width: 100%;
    height: 333rpx;
}

.grid.grid-square>view {
    margin-bottom: 0;
}

