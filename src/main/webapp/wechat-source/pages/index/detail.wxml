<!--index.wxml-->
<!-- 1 rpx = 0.48 px-->
<view class="page">
    <view class="card">
        <view class="title-bar">
            <image src="https://img.52z.com/upload/news/image/20181011/20181011092002_29968.jpg"/>
            <view class="info grid col-1">
                <text class="left-top">ROYIANS{{cid}}</text>
                <text class="left-bottom">2019-01-02 11:22</text>
            </view>
        </view>
        <scroll-view class="content" scroll-y="true">
            <text></text>
            <view class="grid col-3 flex-sub grid-square">
                <view class="bg-img" style="background-image:url({{item}});" data-src="{{item}}" wx:for="{{imgalist}}" wx:key="i" bindtap="previewImage"></view>
            </view>
            <!--<video src="http://www.w3school.com.cn/i/movie.ogg"></video>-->
        </scroll-view>
    </view>
    <view class="black-bottom"></view>
</view>
