/**index.wxss**/
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
@import "/template/post-item/post-item.wxss";
.page {
    display: block;
    min-height: 100%;
    height: 100vh;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
    background-color: #FFFFFF;
}

.black-bottom {
    height: 65vh;
    width: 100%;
    background-color: #212121;
    position: fixed;
    bottom: 0;
    z-index: -1;
}


.black-bottom::before {
    content: '';
    width: 140%;
    height: 312.5rpx;
    position: absolute;
    left: -20%;
    top: -15%;
    z-index: -2;
    border-radius: 100% 100% 0 0;
    background: #212121;
}

.card {
    min-height: 92vh;
}

.content {
    width: 86%;
    min-height: 90%;
    margin: 0 7% 0 7%;
}

.content .post-img {
    margin-top: 25rpx;
}