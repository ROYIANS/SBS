/**index.wxss**/
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
.page {
    display: block;
    min-height: 100%;
    height: 100vh;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
    background-color: #fff;
}


.black-top {
    height: 10vh;
    width: 100%;
    background-color: #212121;
    position: fixed;
    top: 0;
    z-index: -1;
}



.black-top::before {
    content: '';
    width: 140%;
    height: 312.5rpx;
    position: absolute;
    left: -20%;
    top: 15%;
    z-index: -2;
    border-radius: 0 0 100% 100%;
    background: #212121;
}

.avatar {
    border-radius: 100%;
    width: 232rpx;
    height: 232rpx;
    background-color: rgba(255,255,255,0.27);
    position: relative;
    left: 50%;
    top: 12vh;
    transform: translateX(-50%);
}

.avatar image {
    width: 90%;
    height: 90%;
    border-radius: 100%;
}

.user-name {
    font-weight: bold;
    font-size: 52rpx;
    color: #ffffff;
    position: relative;
    top: 8vh;
    width: 100%;
    text-align: center;
}

.card {
    width: 90%;
    height: 35vh;
    background-color: #ffffff;
    border: solid 3px #212121;
    margin: 65% 5% 0 5%;
}

.title-bar {
    display:inline-block !important;
    padding: 10rpx 25rpx;
    background-color: #fff;
    position: relative;
    font-size: 25rpx;
    left: 25rpx;
    top: -32rpx;
}

.setting-list {
    width: 86%;
    height: 90%;
    margin: 0 7% 0 7%;
    padding-bottom: 7%;
}

.setting-title {
    font-weight: bold;
    font-size: 33rpx;
}

.icon {
    padding-right: 10rpx;
}

.button {
    width:90%;
    background-color: #212121;
    color: #ffffff;
    margin: 25rpx 5%;
    border-radius: 0;
    height: 75rpx;
    font-size: 30rpx;
}

.card-item-hover {
    background-color: #ccc;
}

.button-hover {
    background-color: rgba(33,33,33,0.8) !important;
}