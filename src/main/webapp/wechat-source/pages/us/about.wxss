/* pages/us/about.wxss */
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
.page {
    display: block;
    min-height: 100%;
    height: 100vh;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
    background-color: #fff;
}

.card {
    width: 90%;
    background-color: #ffffff;
    border: solid 3px #212121;
    margin: 5% 5% 0 5%;
}

.title-bar {
    display:inline-block !important;
    padding: 10rpx 25rpx;
    background-color: #fff;
    position: relative;
    font-size: 25rpx;
    left: 25rpx;
    top: -32rpx;
}

.icon {
    padding-right: 10rpx;
}

.text-indent {
    text-indent: 2em;
}

.group-item image {
    width: 66rpx;
    height: 66rpx;
    border-radius: 100%;
    border: solid 5rpx #212121;
}

.group-item text {
    color: #212121;
    font-weight: bold;
    font-size: 25rpx;
    margin-left: 20rpx;
}

.loading {
    height: 100rpx;
}