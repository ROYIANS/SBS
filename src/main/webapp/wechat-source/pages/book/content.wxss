/**index.wxss**/
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
@import "/template/post-item/post-item.wxss";
.page {
    display: block;
    min-height: 100%;
    height: 100vh;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
    background-color: #FFFFFF;
}

.title-bar {
    font-size: 50rpx;
    font-weight: bold;
}

.black-bottom {
    height: 65vh;
    width: 100%;
    background-color: #212121;
    position: fixed;
    bottom: 0;
    z-index: -1;
}


.black-bottom::before {
    content: '';
    width: 140%;
    height: 312.5rpx;
    position: absolute;
    left: -20%;
    top: -15%;
    z-index: -2;
    border-radius: 100% 100% 0 0;
    background: #212121;
}

.card {
    min-height: 80vh;
    margin: 20% 2.5% 5% 2.5%;
}

.edit {
    width: 75rpx!important;
    position:reletive;
    top:50rpx;
    right:-40%;
    border: none;
}

.sbs-content {
    width: 86%;
    min-height: 90%;
    margin: 0 7% 15% 7%;
}

.sbs-content .post-img {
    margin-top: 25rpx;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 12vh;
    width: 100%;
    background-color: transparent;
    z-index: 2;
}

.transparent {
    background-color: transparent;
}

.button {
    width:100%;
    background-color: #212121;
    color: #ffffff;
    border-radius: 0;
    height: 75rpx;
    font-size: 30rpx;
    border: solid 5rpx #212121;
    padding: 0;
}

.button-white {
    width:100%;
    background-color: #ffffff;
    color: #212121;
    border-radius: 0;
    height: 75rpx;
    font-size: 30rpx;
    border: solid 5rpx #212121;
    padding: 0;
}

.container {
    width: 80%;
}

.button-hover {
    background-color: rgba(33,33,33,0.8) !important;
    border: solid 5rpx rgba(33,33,33,0.8);
}

.button-hover-white {
    background-color: #212121;
    color: #ffffff;
}

button::after {
    border: none;
}